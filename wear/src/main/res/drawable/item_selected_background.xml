<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/appOnPrimary"
                android:endColor="@color/appPrimary"
                android:angle="135" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/appPrimary"
                android:endColor="@color/appOnPrimary"
                android:type="linear"
                android:angle="45" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>